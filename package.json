{
  "name": "local-ai-bridge",
  "displayName": "Local AI Bridge",
  "description": "Expose VS Code Language Model providers over a localhost chat API and browser UI.",
  "version": "0.0.1",
  "publisher": "local",
  "license": "MIT",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:localAI.connection",
    "onView:localAI.controls",
    "onView:localAI.logs",
    "onCommand:localAI.startServer",
    "onCommand:localAI.stopServer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "localAI.startServer",
        "title": "Local AI: Start Server"
      },
      {
        "command": "localAI.stopServer",
        "title": "Local AI: Stop Server"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "localAI",
          "title": "Local AI Bridge",
          "icon": "media/local-ai-bridge-icon.svg"
        }
      ]
    },
    "views": {
      "localAI": [
        {
          "id": "localAI.connection",
          "name": "Connection",
          "type": "webview"
        },
        {
          "id": "localAI.controls",
          "name": "Controls",
          "type": "webview"
        },
        {
          "id": "localAI.logs",
          "name": "Event Logs",
          "type": "webview"
        }
      ]
    },
    "configuration": {
      "title": "Local AI Bridge",
      "properties": {
        "localAI.transport": {
          "type": "string",
          "enum": [
            "sse",
            "websocket"
          ],
          "default": "sse",
          "description": "Streaming transport for browser responses."
        },
        "localAI.port": {
          "type": "number",
          "default": 3000,
          "minimum": 1024,
          "maximum": 65535,
          "description": "Port used by the Local AI Bridge server."
        },
        "localAI.autoStart": {
          "type": "boolean",
          "default": true,
          "description": "Start the Local AI Bridge server when VS Code launches."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "demo": "node demo-web/server.js",
    "vscode:prepublish": "npm run compile"
  },
  "dependencies": {
    "express": "^4.19.2",
    "express-ws": "^5.0.2",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/express-ws": "^3.0.5",
    "@types/node": "^20.17.30",
    "@types/vscode": "^1.95.0",
    "@types/ws": "^8.5.13",
    "typescript": "^5.7.3"
  }
}
